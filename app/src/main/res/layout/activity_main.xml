<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="371dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:background="#efa51c"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/play_area"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="39dp"
            android:text="@string/play_area" />

        <ImageView
            android:id="@+id/delete"
            android:layout_width="79dp"
            android:layout_height="54dp"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/btnStop"
            android:layout_marginEnd="25dp"
            app:srcCompat="@drawable/delete" />

        <ImageView
            android:id="@+id/btnStop"
            android:layout_width="94dp"
            android:layout_height="50dp"
            android:layout_alignTop="@+id/btnPlay"
            android:layout_centerHorizontal="true"
            app:srcCompat="@drawable/stop" />

        <ImageView
            android:id="@+id/btnPlay"
            android:layout_width="82dp"
            android:layout_height="49dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="28dp"
            android:layout_marginStart="11dp"
            app:srcCompat="@drawable/play" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="306dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="#497a5c">

        <TextView
            android:id="@+id/record_area"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text="@string/record_area" />

        <ImageView
            android:id="@+id/btnStartRecord"
            android:layout_width="101dp"
            android:layout_height="75dp"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/btnStartRecord"
            android:layout_marginBottom="20dp"
            app:srcCompat="@drawable/record"
            tools:ignore="NotSibling" />

        <ImageView
            android:id="@+id/btnStopRecord"
            android:layout_width="85dp"
            android:layout_height="59dp"
            android:layout_alignBottom="@+id/btnStartRecord"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="24dp"
            app:srcCompat="@drawable/stop"
            tools:ignore="NotSibling" />

    </RelativeLayout>

</RelativeLayout>